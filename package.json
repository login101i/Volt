{
  "name": "volt-desktop",
  "version": "1.0.0",
  "description": "Volt Desktop Application",
  "main": "electron/main.js",
  "scripts": {
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:server": "cd server && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && npm run build:server",
    "build:frontend": "cd frontend && cross-env NODE_OPTIONS=--max-old-space-size=4096 npm run build",
    "build:server": "cd server && npm install",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "pack": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "ngrok": "node start-ngrok.js",
    "ngrok:all": "node start-with-ngrok.js",
    "ngrok:simple": "ngrok http 3000",
    "ngrok:url": "node get-ngrok-url.js"
  },
  "keywords": [
    "electron",
    "desktop",
    "app"
  ],
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.volt.desktop",
    "productName": "Volt",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/.next/standalone/**/*",
      "frontend/.next/static/**/*",
      "frontend/public/**/*",
      "frontend/package.json",
      "server/**/*",
      "server/node_modules/**/*",
      "!server/node_modules/**/test/**/*",
      "!server/node_modules/**/*.md",
      "!server/node_modules/**/.bin/**/*",
      "!**/node_modules/**/*",
      "!frontend/node_modules/**/*",
      "!frontend/.next/cache/**/*"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Volt"
    }
  },
  "dependencies": {
    "pg": "^8.17.0"
  }
}
